<Page
    x:Class="Navigation.Views.Inventory.VariantsDetailPage"
    x:Name="PageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:PhoneSelling.Data.Models"
    xmlns:viewmodel="using:PhoneSelling.ViewModel.Pages.Inventory"
    xmlns:conv="using:Navigation.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="GridViewItemStyle" TargetType="GridViewItem">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        </Style>
        <Style x:Key="TableHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <DataTemplate x:Key="TableDataTemplate" x:DataType="data:Item">
            <Grid Padding="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Border BorderBrush="Gray" BorderThickness="0,0,2,0">
                    <TextBlock Text="{x:Bind ItemName}" Grid.Column="0" Margin="5" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                </Border>
                <Border BorderBrush="Gray" BorderThickness="0,0,2,0" Grid.Column="1">
                    <TextBlock Text="{x:Bind Description}"  Margin="5" TextWrapping="Wrap" FontSize="15" VerticalAlignment="Center"/>
                </Border>
                <Border BorderBrush="Gray" BorderThickness="0,0,2,0" Grid.Column="2">
                    <TextBlock Text="{x:Bind ReleaseDate}"  Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border BorderBrush="Gray" BorderThickness="0,0,2,0" Grid.Column="3">
                    <Image Source="{x:Bind Picture}"  Margin="5" Height="80" Stretch="Uniform" VerticalAlignment="Center"/>
                </Border>

                <Border BorderBrush="Gray" BorderThickness="0,0,0,0" Grid.Column="4">
                    <TextBlock Text="{x:Bind Variants.Count}" Grid.Column="4" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <!-- For Variants, display the count or you can customize as needed -->
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="GridTemplate" x:DataType="data:Item">
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="200" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="{x:Bind ItemName}" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Grid.Row="1" Text="{x:Bind ReleaseDate}" FontSize="14" Margin="0,5,0,5"/>
                    <Image Grid.Row="2" Source="{x:Bind Picture}" Stretch="Uniform" Margin="0,5,0,5"/>
                    <TextBlock Grid.Row="3" Text="Variants:" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <ListView ItemsSource="{x:Bind Variants, Mode=OneWay}" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="data:Variant">
                                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,5,0,5">
                                    <TextBlock Text="Storage:" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind Storage}" />
                                    <TextBlock Text="GB,"/>
                                    <TextBlock Text="Price:" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind SellingPrice}" />
                                    <TextBlock Text="USD,"/>
                                    <TextBlock Text="Stock:" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind StockQuantity}" />
                                    <TextBlock Text="Color:" FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind Color.Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>

            </Border>
        </DataTemplate>


        <conv:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
    </Page.Resources>

    <Grid>
        <!-- Outer ScrollViewer wrapping all content -->
        <!-- ToggleSwitch to select view mode -->
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ToggleSwitch Grid.Row="0"
                      x:Name="ViewToggleSwitch" Header="Grid View" 
                      IsOn="{x:Bind ViewModel.IsGridView, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="20"/>

        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- ListView mode -->
                <StackPanel Visibility="{x:Bind ViewModel.IsGridView, Converter={StaticResource InverseBoolToVisConverter}, Mode=OneWay}">
                    <Grid Background="LightBlue" Padding="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <TextBlock Text="Item Name" Grid.Column="0" Style="{StaticResource TableHeaderStyle}"/>
                        </Border>
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0" Grid.Column="1">
                            <TextBlock Text="Description"  Style="{StaticResource TableHeaderStyle}"/>
                        </Border>
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0" Grid.Column="2">
                            <TextBlock Text="Release Date"  Style="{StaticResource TableHeaderStyle}"/>
                        </Border>
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0" Grid.Column="3">
                            <TextBlock Text="Picture"  Style="{StaticResource TableHeaderStyle}"/>
                        </Border>
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0" Grid.Column="4">
                            <TextBlock Text="Variants"  Style="{StaticResource TableHeaderStyle}"/>
                        </Border>
                    </Grid>
                    <ListView ItemsSource="{x:Bind ViewModel.QueryViewModel.Items, Mode=OneWay}"
                              ItemTemplate="{StaticResource TableDataTemplate}"
                              Margin="0">
                    </ListView>

                </StackPanel>
                <!-- GridView mode -->
                <GridView ItemsSource="{x:Bind ViewModel.QueryViewModel.Items, Mode=OneWay}" 
                          ItemTemplate="{StaticResource GridTemplate}"
                          Visibility="{x:Bind ViewModel.IsGridView, Converter={StaticResource BoolToVisConverter}, Mode=OneWay}"
                          Margin="20"
                          ItemContainerStyle="{StaticResource GridViewItemStyle}">
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3" ItemWidth="300"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                </GridView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
