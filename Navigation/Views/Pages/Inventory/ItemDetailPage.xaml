<Page
    x:Class="Navigation.Views.Inventory.ItemDetailPage"
    x:Name="PageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Navigation.Views"
    xmlns:inventory="using:PhoneSelling.ViewModel.Pages.Inventory"
    xmlns:data="using:PhoneSelling.Data.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- DataContext is set in code-behind -->
    <Grid>
        <Pivot x:Name="MainPivot">
            <!-- PivotItem 1: Brands -->
            <PivotItem Header="Brands">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <ListView x:Name="BrandsList"
                                  ItemsSource="{x:Bind _viewModel.Brands, Mode=OneWay}"
                                  SelectionMode="Single"
                                  SelectionChanged="BrandsList_SelectionChanged">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="data:ItemGroup">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                        <TextBlock Text="{x:Bind ItemGroupName}" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
                                        <TextBlock Text=" - " FontSize="22" Margin="5,0"/>
                                        <TextBlock Text="{x:Bind Category}" FontSize="22" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>

            <!-- PivotItem 2: Groups (subgroups within selected brand) -->
            <PivotItem Header="Groups">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <ListView x:Name="GroupsList"
                                  ItemsSource="{x:Bind _viewModel.ItemsGroups, Mode=OneWay}"
                                  SelectionMode="Single"
                                  SelectionChanged="GroupsList_SelectionChanged">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="inventory:ItemsSubGroup">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                        <TextBlock Text="{x:Bind GroupName}" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>

            <!-- PivotItem 3: Items (within the selected subgroup) -->
            <PivotItem Header="Items">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <ListView x:Name="ItemsList"
                                  ItemsSource="{x:Bind _viewModel.SelectedItemsGroup.Items, Mode=OneWay}"
                                  SelectionMode="Single"
                                  SelectionChanged="ItemsList_SelectionChanged">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="data:Item">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                        <TextBlock Text="{x:Bind ItemName}" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>

            <!-- PivotItem 4: Details -->
            <PivotItem Header="Details">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <Border Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                            CornerRadius="10" Padding="20" Margin="20">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
                            <!-- Item Basic Details -->
                            <TextBlock Text="{x:Bind _viewModel.SelectedItem.ItemName, Mode=OneWay}"
                                       FontSize="32" FontWeight="Bold" Foreground="Black" Margin="0,0,0,10"/>
                            <TextBlock Text="{x:Bind _viewModel.SelectedItem.Description, Mode=OneWay}"
                                       FontSize="20" TextWrapping="Wrap" Foreground="DarkGray" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Released: " FontSize="18" FontWeight="SemiBold" Foreground="Gray"/>
                                <TextBlock Text="{x:Bind _viewModel.SelectedItem.ReleasedDate, Mode=OneWay}"
                                           FontSize="18" Foreground="Gray"/>
                            </StackPanel>
                            <!-- Grid splitting image and variants -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <!-- Left Column: Item Image -->
                                <Border Grid.Column="0" Background="Gray" CornerRadius="10" Margin="0,0,10,0">
                                    <Image Source="{x:Bind _viewModel.SelectedItem.Picture, Mode=OneWay}"
                                           Stretch="UniformToFill"/>
                                </Border>
                                <!-- Right Column: Variants List -->
                                <StackPanel Grid.Column="1" HorizontalAlignment="Stretch">
                                    <!--<TextBlock Text="Variants:" FontSize="26" FontWeight="Bold" Foreground="Black" Margin="0,0,0,10"/>-->
                                    <ListView ItemsSource="{x:Bind _viewModel.SelectedItem.Variants, Mode=OneWay}"
                                              SelectionMode="None">
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="data:Variant">
                                                <Border Background="White" CornerRadius="5" Padding="10" Margin="0,0,0,10"
                                                        BorderBrush="LightGray" BorderThickness="1">
                                                    <StackPanel Orientation="Vertical">
                                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                            <TextBlock Text="Storage: " FontSize="16" FontWeight="SemiBold"/>
                                                            <TextBlock Text="{x:Bind Storage}" FontSize="16" FontWeight="Bold"/>
                                                            <TextBlock Text="GB" FontSize="16" Margin="5,0,0,0"/>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                            <TextBlock Text="Color: " FontSize="16" FontWeight="SemiBold"/>
                                                            <TextBlock Text="{x:Bind Color}" FontSize="16" FontWeight="Bold"/>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                            <TextBlock Text="Price: " FontSize="16" FontWeight="SemiBold"/>
                                                            <TextBlock Text="{x:Bind SellingPrice}" FontSize="16" FontWeight="Bold"/>
                                                            <TextBlock Text=" USD" FontSize="16" Margin="5,0,0,0"/>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="Stock: " FontSize="16" FontWeight="SemiBold"/>
                                                            <TextBlock Text="{x:Bind StockQuantity}" FontSize="16" FontWeight="Bold"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </ScrollViewer>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
