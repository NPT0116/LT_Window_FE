<Page
    x:Class="Navigation.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Navigation.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:Core="using:Microsoft.Xaml.Interactivity"
    xmlns:converter="using:Navigation.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    RequestedTheme="Light">
    <Page.Resources>
        <converter:VisibilityConverter x:Key="VisibilityConverter"/>
    </Page.Resources>
    
    <Grid>
        <NavigationView x:Name="nvSample"
                        BackRequested="OnBackRequested"
                        PaneDisplayMode="Left"
                        IsBackButtonVisible="Visible"
                        IsTitleBarAutoPaddingEnabled="False"
                        OpenPaneLength="250">
            <NavigationView.Resources>
                <Thickness x:Key="NavigationViewHeaderPadding">0</Thickness>
            </NavigationView.Resources>
            <!-- Back button behavior -->
            <Interactivity:Interaction.Behaviors>
                <Core:EventTriggerBehavior EventName="BackRequested">
                    <Core:InvokeCommandAction Command="{Binding GoBackCommand}" />
                </Core:EventTriggerBehavior>
            </Interactivity:Interaction.Behaviors>
            <!-- NavigationView Header -->
            <NavigationView.Header>
                <Grid Margin="-55,-60,0,0" Height="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!-- SearchBar -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <AppBarButton Icon="Refresh" 
                                      Height="50"
                                      />
                        <AutoSuggestBox QueryIcon="Find" 
                                        AutomationProperties.Name="Search"
                                        Width="300" Height="40"/>
                    </StackPanel>
                    <!-- Account Manager -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <TextBlock Text="Hello, To Lam !" 
                                   FontSize="15" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,15,0">
                            <TextBlock.Visibility>
                                <Binding ElementName="nvSample" 
                                         Path="IsPaneOpen"
                                         Converter="{StaticResource VisibilityConverter}"/>
                            </TextBlock.Visibility>

                        </TextBlock>
                        <Button Width="40"
                                Height="40"
                                Padding="0"
                                Background="DarkGray">
                            <Button.Content>
                                <Image Source="https://upload.wikimedia.org/wikipedia/commons/f/f6/T%C3%B4_L%C3%A2m_in_Hanoi_-_2024_%28P064238-935063%29.jpg" 
                                   Stretch="UniformToFill" />
                            </Button.Content>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Grid>
                                                    <Border CornerRadius="25"
                                                        BorderBrush="Gray">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                    </Border>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <NavigationViewItem Icon="Favorite" AutomationProperties.Name="favorite" />
                    </StackPanel>
                </Grid>
            </NavigationView.Header>
            <!-- NavigationView Menu Items -->
            <NavigationView.MenuItems>
                <!-- Dashboard Page -->
                <NavigationViewItem Icon="Play" Content="Dashboard" Tag="Dashboard Page">
                    <Interactivity:Interaction.Behaviors>
                        <Core:EventTriggerBehavior EventName="Tapped">
                            <Core:InvokeCommandAction Command="{Binding GoToDashboardPageCommand}" />
                        </Core:EventTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>
                </NavigationViewItem>
                <!-- Inventory Manager -->
                <NavigationViewItem Icon="Play" Content="Inventory">
                    <NavigationViewItem.MenuItems>
                        <!-- View Items Page -->
                        <NavigationViewItem Icon="Refresh" Content="Items" IsExpanded="true">
                            <Interactivity:Interaction.Behaviors>
                                <Core:EventTriggerBehavior EventName="Tapped">
                                    <Core:InvokeCommandAction Command="{Binding GoToViewItemsPageCommand}" />
                                </Core:EventTriggerBehavior>
                            </Interactivity:Interaction.Behaviors>
                        </NavigationViewItem>
                        <!-- Create Items Page -->
                        <NavigationViewItem Icon="Refresh" Content="Item Groups" IsExpanded="true">
                            <Interactivity:Interaction.Behaviors>
                                <Core:EventTriggerBehavior EventName="Tapped">
                                    <Core:InvokeCommandAction Command="{Binding GoToCreateItemsPageCommand}"/>
                                </Core:EventTriggerBehavior>
                            </Interactivity:Interaction.Behaviors>
                        </NavigationViewItem>
                        <!-- Inventory Adjustment -->
                        <NavigationViewItem Icon="Refresh" Content="Inventory Adjustments" IsExpanded="true">
                            <Interactivity:Interaction.Behaviors>
                                <Core:EventTriggerBehavior EventName="Tapped">
                                    <Core:InvokeCommandAction Command="{Binding GoToInventoryAdjustmentsPageCommand}" />
                                </Core:EventTriggerBehavior>
                            </Interactivity:Interaction.Behaviors>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>
                <!-- Report Manager -->
                <NavigationViewItem Icon="Play" Content="Reports">
                    <Interactivity:Interaction.Behaviors>
                        <Core:EventTriggerBehavior EventName="Tapped">
                            <Core:InvokeCommandAction Command="{Binding GoToReportPageCommand}" />
                        </Core:EventTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <!-- NavigationView Pane Footer -->
            <!-- <navigationview.panefooter>
                <stackpanel x:name="footerstackpanel" orientation="vertical">
                    <navigationviewitem icon="download" automationproperties.name="download"/>
                </stackpanel>
            </navigationview.panefooter> --> 

            <!-- Content Frame -->
            <Border Margin="0,-20,0,0"
                    BorderThickness="0,1,0,0" 
                    BorderBrush="Black">
                <Frame x:Name="PageFrame"
                        Margin="0,0,0,0"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Content="{Binding ChildPageNavigation.ViewModel, Converter={StaticResource Vm2V}}"/>
            </Border>
        </NavigationView>
    </Grid>
</Page>